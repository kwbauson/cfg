#!/usr/bin/env bash
# with-packages git
branch=${1:-main}
set -e
cd ~/cfg
git fetch --quiet
pending=$(git branch --list --remote origin/updates-all)
if [[ $(git rev-parse $branch) != $(git rev-parse origin/$branch) ]];then
  if [[ -n $pending ]];then
    echo updates and pending
  else
    echo updates
  fi
else
  if [[ -n $pending ]];then
    echo pending
  fi
fi
