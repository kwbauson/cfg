{
  /* "codeLens.enable": true, */
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.maxWindowHeight": 20,
  "suggest.removeDuplicateItems": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "jsonc",
    "json",
    "yaml",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascript.jsx",
    "python",
    "nix"
  ],
  "list.insertMappings": {
    "<c-n>": "normal:j",
    "<c-p>": "normal:k",
    "<c-t>": "action:tabe",
    "<c-v>": "action:vsplit"
  },
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/home/keith/.nix-profile/bin/black",
  "session.saveOnVimLeave": false,
  "prettier.semi": false,
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.disableSuccessMessage": true,
  "typescript.preferences.quoteStyle": "single",
  "tsserver.disableAutomaticTypeAcquisition": true,
  "tsserver.ignoreLocalTsserver": true,
  "git.addGBlameToVirtualText": true,
  "git.addGBlameToBufferVar": true,
  "solargraph.definitions": true,
  "solargraph.hover": true,
  "solargraph.checkGemVersion": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.git.showIgnored": true,
  "explorer.previewAction.onHover": false,

  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"]
    }
  }
}

// vim:ft=jsonc
